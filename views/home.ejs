<%- include("partials/header"); -%>

<h1>Home</h1>
<p> <%= hsc %> </p>


<% for (var i = 0; i < posts.length; i++) {  %>
  <h1> <%= posts[i].postTitle  %> </h1>


<% if(posts[i].postBody.length > 100){ %>
  <p> <%= posts[i].postBody.substring(0,100)+"..." %> </p>
  <a  href = "/posts/<%= posts[i].postTitle %>" >Read More</a>
<% }else { %>
  <p> <%= posts[i].postBody  %> </p>
<% } %>

<% } %>


<%- include("partials/footer"); -%>
